{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["es5", "es6", "dom"],
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../dist",
    "removeComments": true,
    "target": "es2015"
  },
  "include": ["./*.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": false
}