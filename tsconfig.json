{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true, 
    "experimentalDecorators": true,
    "lib": ["dom", "esnext"],
    "paths": {
      "custom-elements-ts": ["src/index"]
    }
  },
  "include": [
    "./demos/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "./tests/**/*"
  ]
}